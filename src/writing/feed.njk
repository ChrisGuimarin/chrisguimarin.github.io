---
permalink: /writing/feed.xml
eleventyExcludeFromCollections: true
layout: false
---
<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="/assets/feed.xsl" type="text/xsl"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>Chris Guimarin â€“ Writing</title>
    <subtitle>Essays, notes, and explorations from the intersection of design, technology, and leadership</subtitle>
    <link href="{{ '/writing/feed.xml' | absoluteUrl(site.url) }}" rel="self"/>
    <link href="{{ '/writing/' | absoluteUrl(site.url) }}"/>
    {% if collections.writing.length > 0 %}
    <updated>{{ collections.writing | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
    {% else %}
    <updated>2025-01-01T00:00:00Z</updated>
    {% endif %}
    <id>{{ '/writing/' | absoluteUrl(site.url) }}</id>
    <author>
        <name>Chris Guimarin</name>
    </author>
    {% for post in collections.writing | reverse %}
    <entry>
        <title>{{ post.data.title }}</title>
        <link href="{{ post.url | absoluteUrl(site.url) }}"/>
        <updated>{{ post.date | dateToRfc3339 }}</updated>
        <published>{{ post.date | dateToRfc3339 }}</published>
        <id>{{ post.url | absoluteUrl(site.url) }}</id>
        <content type="html">{{ post.templateContent | htmlToAbsoluteUrls(site.url) }}</content>
    </entry>
    {%- endfor %}
</feed>
