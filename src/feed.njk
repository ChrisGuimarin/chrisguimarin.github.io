---
permalink: /feed.xml
eleventyExcludeFromCollections: true
layout: false
---
<?xml version="1.0" encoding="utf-8"?>
<?xml-stylesheet href="/assets/feed.xsl" type="text/xsl"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>Chris Guimarin</title>
    <subtitle>Design, leadership, and the stage</subtitle>
    <link href="{{ '/feed.xml' | absoluteUrl(site.url) }}" rel="self"/>
    <link href="{{ '/' | absoluteUrl(site.url) }}"/>
    <updated>{{ collections.all | getNewestCollectionItemDate | dateToRfc3339 }}</updated>
    <id>{{ '/' | absoluteUrl(site.url) }}</id>
    <author>
        <name>Chris Guimarin</name>
    </author>
    {% for post in collections.writing | reverse %}
    <entry>
        <title>{{ post.data.title }}</title>
        <link href="{{ post.url | absoluteUrl(site.url) }}"/>
        <updated>{{ post.date | dateToRfc3339 }}</updated>
        <published>{{ post.date | dateToRfc3339 }}</published>
        <id>{{ post.url | absoluteUrl(site.url) }}</id>
        <content type="html">{{ post.templateContent | htmlToAbsoluteUrls(site.url) }}</content>
    </entry>
    {% endfor %}
    {% for book in collections.books | reverse %}
    <entry>
        <title>ðŸ“š Added to shelf: {{ book.data.title }}</title>
        <link href="{{ book.data.link }}"/>
        <updated>{{ book.data.dateAdded | dateToRfc3339 }}</updated>
        <id>{{ book.url | absoluteUrl(site.url) }}</id>
        <content type="html"><![CDATA[
            <p>Added <strong>{{ book.data.title }}</strong> by {{ book.data.author }} to my shelf.</p>
            {% if book.data.cover %}
            <p><img src="{{ book.data.cover | absoluteUrl(site.url) }}" alt="{{ book.data.title }} cover" style="max-width: 200px;"></p>
            {% endif %}
            <p><a href="{{ book.data.link }}">Find this book</a></p>
        ]]></content>
    </entry>
    {% endfor %}
</feed>
