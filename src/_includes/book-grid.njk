<div class="book-grid">
{%- for book in books -%}
    <figure>
        <a href="{{ book.data.link }}" target="_blank" rel="noopener noreferrer" aria-label="{{ book.data.title }} (opens in new window)">
            <img src="{{ book.data.cover }}" alt="{{ book.data.title }} book cover" loading="lazy" decoding="async">
            <figcaption>
                <strong>{{ book.data.title }}</strong><br>
                {{ book.data.author }}
            </figcaption>
        </a>
    </figure>
{%- endfor -%}
</div>
